<h4>Average rating: <%= @user.average_rating %> </h4>
<% if logged_in? %>

	<% @user.reviews.each do |review| %>

		<span>Rating: <%= number_with_precision(review.rating, precision: 2, significant: true, strip_insignificant_zeros: true) %>/5</span>
		<div class="star-review" data-score="<%= review.rating %>"></div>
		

		<p>Review: <%= review.content %> Written by: <%= review.review_writer.first_name %> |
		    <% if review.review_writer_id == current_user.id %>

		      <%= link_to "Edit", edit_user_review_path(@user,review) %> | 
		      <%= link_to "Delete", user_review_path(@user,review), data: {confirm: "Are you sure?"}, method: :delete, remote: true %>

		    <% end %>
		</p>

	<% end %>

<% else %>

	<h4>Sign up or log in to see reviews</h4>

<% end %>


